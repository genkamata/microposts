<h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
</h>
    <%= link_to "edit", edit_user_path %>
    
    <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

     
      
       <%= f.label :Home_Ttown %>
      <%= f.text_field :Home_Town %>
      
      <label><%= f.radio_button :sex, "1" %>男</label>
      <label><%= f.radio_button :sex, "2" %>女</label>
      <%= f.label :age %>
      <%= f.text_field :age %>
<%= f.label :age %>
  <%= f.date_select(
          :age,
          start_year: 1930,
          end_year:   (Time.now.year - 18),
          default:    Date.new(1989, 1, 1)) %>
   
      <label><<%= f.label :country %></label><br />
  <%= f.country_select :country, prompt: 'Please select a country' %>
      <%= f.submit "Update your account", class: "btn btn-large btn-primary" %>
    <% end %>
  